html, body, .container
  min-height 100%
  display flex
  flex-direction column
  font-family sans-serif
.row
  display flex
  flex-wrap wrap
  border-bottom 1px solid #ccc
  div
    width 60%
    display flex
    align-items center
  &.new .text
    font-weight bold
  .select
    width 40%
    select
      width 100%
      padding .2rem